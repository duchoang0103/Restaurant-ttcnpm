<%- include('../includes/components/headerAdmin.ejs') %>

    <div class="container ">
        <div class="row">
            <div class="col-1"></div>
            <form action="/editProduct" class="col" method="POST">
                <h2>
                    <%= product.title %>
                </h2>
                    
                <div class="form-group">
                    <label for="exampleFormControlInput1">Số lượng</label>
                    <input type="number" name="quantity" class="form-control" step="1" id="exampleFormControlInput1"
                        placeholder="quantity" value="<%= product.quantity %>">
                </div>


                <div class="form-group ">
                    <label for="inputState">Trạng thái</label>
                    <select name="status" id="status" class="form-control">
                        <option value="0" <%=product.status===0 ? "selected" : "" %>>Ẩn</option>
                        <option value="1" <%=product.status===1 ? "selected" : "" %> >Hiển thị</option>
                    </select>
                </div>


                <input type="hidden" value="<%= product._id %>" name="productId">
                
                <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 

                <button type="submit" class="btn btn-primary mb-3 mr-3">Edit Product</button>
            </form>


        </div>
    </div>

    <%- include('../includes/components/footerAdmin.ejs') %>