
    <%- include('../includes/components/headerAdmin.ejs') %>

    <div class="container ">
        <div class="row">
            <div class="col-1"></div>
            <form action="/admin/editProduct"  class="col" method="POST">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <!-- Tieu de  -->
                            <label for="exampleFormControlInput1">Tiêu đề</label>
                            <input type="text" name="title" class="form-control" id="exampleFormControlInput1"
                                placeholder="Title" value="<%= product.title %>">
                        </div>
                        <div class="form-group">
                            <!-- Hinh anh -->
                            <label for="exampleFormControlInput1">Url Hình ảnh</label>
                            <input type="text" name="imageUrl" class="form-control" id="exampleFormControlInput1"
                                placeholder="Image" value="<%= product.imageUrl %>">
                        </div>
        
                        <div class="form-group">
                            <!-- Gia ca -->
                            <label for="exampleFormControlInput1">Giá</label>
                            <input type="number" name="price" class="form-control" step="1000" id="exampleFormControlInput1"
                                placeholder="price" value="<%= product.price %>">
                        </div>
                            <!-- Thong tin chi tiet -->
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Description</label>
                            <textarea name="description" class="form-control" id="exampleFormControlTextarea1"
                                rows="2"><%= product.description %></textarea>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <!-- So luong -->
                            <label for="exampleFormControlInput1">Số lượng</label>
                            <input type="number" name="quantity" class="form-control" step="1" id="exampleFormControlInput1"
                                placeholder="quantity" value="<%= product.quantity %>">
                        </div>
                        <div class="form-group ">
                            <label for="inputState">Phân loại</label>
                            <select  name="category" id="category" class="form-control">
                                <option value="1" <%= product.category === 1 ? "selected" : "" %>>Ẩm thực Sài Gòn</option>
                                <option value="2" <%= product.category === 2 ? "selected" : "" %>>Thức ăn nhanh</option>
                                <option value="3" <%= product.category === 3 ? "selected" : "" %>>Đồ uống</option>
                                
                            </select>
                        </div>
                        <div class="form-group ">
                            <!-- Trang thai san pham -->
                            <label for="inputState">Trạng thái</label>
                            <select name ="status"  id="status" class="form-control">
                                <option value="0" <%= product.status === 0 ? "selected" : "" %>>Ẩn</option>
                                <option value="1" <%= product.status === 1 ? "selected" : "" %> >Hiển thị</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                
                <input type="hidden" value="<%= product._id %>" name="productId">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary mb-3 mr-3">Edit Product</button>
            </form>


        </div>
    </div>
    
    <%- include('../includes/components/footerAdmin.ejs') %>
